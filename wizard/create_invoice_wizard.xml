<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="create_invoice_wizard_view" model="ir.ui.view">
        <field name="name">create.invoice.wizard.form</field>
        <field name="model">create.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Invoice">
                <group>
                    <field name="partner_id" required="1"/>
                    <field name="rate" required="1" readonly="1"/>
                    <field name="customer_paid" required="1"/>
                </group>
                <footer>
                    <button string="Create Invoice" type="object" name="action_create_invoice" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
